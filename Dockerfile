# Используем образ Node.js
FROM node:14

# Устанавливаем директорию приложения внутри контейнера
WORKDIR /usr/src/app

# Копируем зависимости приложения
COPY package*.json ./

# Устанавливаем зависимости
RUN npm install

# Копируем исходный код приложения
COPY . .

# Открываем порт 3000
EXPOSE 3000

# Команда для запуска приложения
CMD ["node", "app.js"]
